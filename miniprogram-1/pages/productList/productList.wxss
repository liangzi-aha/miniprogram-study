
.search-icon{
  margin-left:-11px;
  vertical-align: middle;
}
.search_content{
  box-sizing:border-box;
  width:75%!important;
  display:inline-block;
  border-radius:8px;
  background:rgb(245,248,250);
  height:32px;
  padding:0 10px 0 20px;
}
.search_input{
  width:75%!important;
  height:32px;
  display:inline-block;
  vertical-align: middle;
}
.search_button{
  width:20%!important;
  margin-left:3%;
  vertical-align: middle;
}
.actityTabbar{
  border-bottom:solid 2px rgb(91, 138, 255);
}

.page-section-spacing{
  margin-top: 20rpx;
  
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item{
  height: 265rpx;
}
.product{
  padding: 10px;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  border-bottom: solid 1px #eee;
}
.product image{
  width:100%;
  max-height:80px;
  border-radius:6px 6px 0 0;
  vertical-align: bottom;

}
.product>view{
  width:100px;
}
.product_image{
  width:27%!important;
  float:left;
  text-align:center;
}
.product_image image{
  min-height:80px;
}
.product_image view{
  background: #f6f6f6;
  font-size:14px;
  padding:3px 0;
  display: -webkit-box; /* 盒子类型 */
  word-break: break-all; /* 自动换行的处理方法。允许在单词内换行 */
  text-overflow: ellipsis; /* 溢出时用... */
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1; /* 行数 */
}
.product_title{
  font-weight: 550;
  font-size:17px;
  line-height: 22px;
}
.product_detail{
  float:left;
  width:72%!important;
  box-sizing: border-box;
  padding:0 10px;
}
.product_detail rich-text{
  min-height: 35px!important;
  max-height: 35px!important;
  display: inline-block;
  overflow:hidden;
  font-size: 14px!important;
  line-height: 17px!important;
  margin-top: 5px;
}
.minFee{
  color: #fb8400;
  font-size:14px;
}
.isLast{
  text-align: center;
  color: #666;
  padding: 10px 0;
}